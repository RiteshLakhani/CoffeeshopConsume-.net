@model DataTable
@using System.Data
@using NiceAdmin.Helper

<main id="main" class="main">
    <div class="text-center mb-4">
        <h2 style="font-weight: bold;">City</h2>
    </div>

    <div class="text-end mb-3">
        <a asp-controller="City" asp-action="CityAddEdit" class="btn btn-primary d-inline-block me-2">
            Add City
        </a>
        <a asp-controller="City" asp-action="ExportToExcel" class="btn btn-primary d-inline-block">
            Excel Export
        </a>
    </div>

    <h6 class="text-danger">@TempData["ErrorMessage"]</h6>

    <div class="mb-3">
        <input type="text" class="form-control" id="citySearch" placeholder="Search Any">
    </div>

    <div class="table-responsive">
        <table class="table table-bordered" id="cityTable">
            <thead>
                <tr>
                    <th scope="col">City Name</th>
                    <th scope="col">State Name</th>
                    <th scope="col">Country Name</th>
                    <th scope="col">CityCode</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        <td>@row["CityName"]</td>
                        <td>@row["StateName"]</td>
                        <td>@row["CountryName"]</td>
                        <td>@row["CityCode"]</td>
                        <td>
                            <form method="post" asp-controller="City" asp-action="CityDelete" asp-route-CityID="@UrlEncryptor.Encrypt(row["CityID"].ToString())" onsubmit="return confirmDelete()">
                                <button type="submit" class="btn btn-outline-danger btn-xs">
                                    <i class="bi bi-x"></i>
                                </button>
                            </form>
                            <a class="btn btn-outline-success btn-xs" asp-controller="City" asp-action="CityAddEdit" asp-route-CityID="@UrlEncryptor.Encrypt(row["CityID"].ToString())">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this city?");
    }
</script>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#citySearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#cityTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
}
