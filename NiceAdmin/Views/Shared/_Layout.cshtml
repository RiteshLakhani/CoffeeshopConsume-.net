@using NiceAdmin;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Pages / Coffee Shope</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
   <!-- ======= Header ======= -->
            <header id="header" class="header fixed-top d-flex align-items-center">
                <div class="d-flex align-items-center justify-content-between">
                    <a href="@Url.Action("Index", "Home")" class="logo d-flex align-items-center">
                        <img src="https://th.bing.com/th/id/OIP.3l72hn0LshdLgG5RBQD91QAAAA?rs=1&pid=ImgDetMain" alt="Coffee Shop Logo" style="max-height: 50px; width: auto;">
                        <span class="d-none d-lg-block">Coffee Shop</span>
                    </a>
                    <i class="bi bi-list toggle-sidebar-btn"></i>
                </div><!-- End Logo -->

                <nav class="header-nav ms-auto">
                    <ul class="d-flex align-items-center">
                        <!-- Profile dropdown -->
                        <li class="nav-item dropdown pe-3">
                            <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@CommonVariable.UserName()</span>
                            </a>
                            <!-- Dropdown menu -->
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile" aria-labelledby="profileDropdown">
                                <li>
                                    <form asp-controller="User" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item d-flex align-items-center">
                                            <i class="bi bi-box-arrow-right"></i>
                                            <span>Log Out</span>
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li><!-- End Profile Nav -->
                    </ul>
                </nav><!-- End Icons Navigation -->
            </header><!-- End Header -->


    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
       <ul class="sidebar-nav" id="sidebar-nav">
           
           <li class="nav-item">
                <a class="nav-link" asp-controller="User" asp-action="User">
                    <i class="bi bi-person"></i><span>User</span>
                </a>
           </li>
           <!-- End User Nav -->

            <li class="nav-item">
                <a class="nav-link" asp-controller="Product" asp-action="Product">
                    <i class="bi bi-box"></i><span>Product</span>
                </a>
            </li>
            <!-- End Product Nav -->

            <li class="nav-item">
                <a class="nav-link" asp-controller="Customer" asp-action="Customer">
                    <i class="bi bi-people"></i><span>Customer</span>
                </a>
            </li>
            <!-- End Customer Nav -->

            <li class="nav-item">
                 <a class="nav-link" asp-controller="Order" asp-action="Order">
                    <i class="bi bi-receipt"></i><span>Order</span>
                </a>
            </li>
            <!-- End Order Nav -->

            <li class="nav-item">
                <a class="nav-link" asp-controller="OrderDetail" asp-action="OrderDetail">
                    <i class="bi bi-card-list"></i><span>Order Detail</span>
                </a>
            </li>
            <!-- End OrderDetail Nav -->

            <li class="nav-item">
                 <a class="nav-link" asp-controller="Bill" asp-action="Bills">
                    <i class="bi bi-receipt-cutoff"></i><span>Bill</span>
                </a>
            </li>
            <!-- End Bills Nav -->

            <li class="nav-item">
                <a class="nav-link" asp-controller="City" asp-action="Index">
                    <i class="bi bi-house-door"></i><span>City</span>
                </a>
            </li>
            <!-- End City Nav -->

            <li class="nav-item">
                <a class="nav-link" asp-controller="State" asp-action="Index">
                    <i class="bi bi-map"></i>
                    <span>State</span>
                </a>
            </li>
            <!-- End State Nav -->

            <li class="nav-item">
                <a class="nav-link" asp-controller="Country" asp-action="Index">
                    <i class="bi bi-flag"></i><span>Country</span>
                </a>
            </li>
            <!-- End Country Nav -->

            <li class="nav-item">
                 <a class="nav-link" asp-controller="Email" asp-action="Index">
                    <i class="bi bi-envelope"></i><span>Email</span>
                </a>
            </li>
            <!-- End Email Nav -->
        </ul>
    </aside><!-- End Sidebar-->




        <main role="main" class="pb-3">
        @RenderBody()
        </main>


     <!-- ======= Footer ======= -->
                <footer id="footer" class="footer">
                    <div class="copyright">
                        &copy; Copyright <strong><span>Ritesh</span></strong>. All Rights Reserved
                    </div>
                    <div class="credits">
                        <!-- All the links in the footer should remain intact. -->
                        <!-- You can delete the links only if you purchased the pro version. -->
                        <!-- Licensing information: https://bootstrapmade.com/license/ -->
                        <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
                        Designed by <a href="https://bootstrapmade.com/">DU</a>
                    </div>
                </footer><!-- End Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


    <!-- Vendor JS Files -->
    <script src="~/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/chart.js/chart.umd.js"></script>
    <script src="~/vendor/echarts/echarts.min.js"></script>
    <script src="~/vendor/quill/quill.js"></script>
    <script src="~/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/vendor/php-email-form/validate.js"></script>
    


    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>

    <!-- Include jQuery and Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
